<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Burger Time!</h1>
    <p class="lead">Create and eat as many burgers as you desire</p>
  </div>
</div>

<div class="burger_colums">
  <div class="row">
    <div class="col-sm-4">

    </div>
    <div class="col-sm-4">
      <img class="big-burger" src="assets/img/bigolburger.jpg" alt="bigBurger">
    </div>
    <div class="col-sm-4">
  
    </div>
  </div>


<div class="serve_eat">
  <div class="row">
    <div class="col-sm">
        <h2>Eat one!</h2>

        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/unless}}
          {{/each}}
        </ul>
    </div>
  


  <div class="col-sm">
    <h2>Add a Burger!</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">What to do with the burger?</label><br>
        <input type="radio" name="devoured" value="1" checked> EAT IT! EAT IT!<br>
        <input type="radio" name="devoured" value="0"> Serve it!
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>

  <div class="col-sm">
      <h2>Burgers Eaten!</h2>
    <div class="list">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    </div>
  </div>
</div>

